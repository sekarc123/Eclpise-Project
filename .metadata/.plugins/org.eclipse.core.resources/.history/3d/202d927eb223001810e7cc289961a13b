package arithmetic;

public class PrimeNumber {

	public static void main(String[] args) {

		int i, m=0, a=0;
		
		int n = 3;
		
		m=n/2;
		
		
		if (n == 1 || n ==2 || n == 0 ){
			System.out.println(n + " Is Not Prime No.");
		}
		
		else if ( n == 3){
			System.out.println(n + " Is Prime No.");
		}
		else {
			for (i=2; i<=m; i++){
				if(n%i == 0) {
					System.out.println(n + " Is Not Prime No.");
					break;
				}
				else if( a == 0) {
					System.out.println(n + " Is Prime No.");
				}
			}
		}
		

	}

}
