package arithmetic;

public class BitwiseLogicalAndOr {

	public static void main(String[] args) {
		int a=10;
		int b=5;
		int c=15;
		
		int op=(a<b)?a:b;
		System.out.println(op);
		
		System.out.println(a<b&&a<c);
		System.out.println(a<b&&++b<c);
		System.out.println(a<b&++a<c);
		System.out.println(a<b&a<c);
		System.out.println(a);
		System.out.println(b);
		
		System.out.println(a<b||a<c);
		
		
		
		
		
	}

}
